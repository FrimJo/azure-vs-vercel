{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "formatter": {
    "indentWidth": 2,
    "lineWidth": 160,
    "lineEnding": "lf",
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always"
    }
  },
  "files": {
    "ignore": ["./node_modules", "./.next", "./vscode"]
  }
}
